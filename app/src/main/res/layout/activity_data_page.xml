<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/startLabel2"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="18sp"
            android:text="@string/points"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="sans-serif-smallcaps" />

        <ImageView
            android:id="@+id/cspic"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="@string/picfour"
            app:srcCompat="@drawable/csbadge" />

        <ImageView
            android:id="@+id/catpic"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="@string/picthree"
            app:srcCompat="@drawable/xyz" />

        <ImageView
            android:id="@+id/dogpic"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:contentDescription="@string/pictwo"
            app:srcCompat="@drawable/chuchu" />

        <ImageView
            android:id="@+id/benpic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:contentDescription="@string/picg"
            app:srcCompat="@drawable/bennordick" />

        <ImageView
            android:id="@+id/geoffpic"
            android:layout_width="147dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:contentDescription="@string/geoffpic"
            app:srcCompat="@drawable/geoff" />

        <Button
            android:id="@+id/mainpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_page"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>